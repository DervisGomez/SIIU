<section id="contenido-sesion">
	<div id="sesion">

		<%= image_tag "ucla.png", :id=> "imagen-sesion" %>
		<%= form_tag({:id=>"for-sesion", :controller => "welcome", :action => "index"}, :method => "get") do %>
			<h1 id="text-sesion">Entrar al Sistema</h1>
			<div id="contenido-mensaje">
				<div id="mensaje-sesion"><%= @mensaje %></div>
			</div>
			<%if @text %>
				<%= text_field_tag "textDato", "", :size => 5, :maxlenght => 5, :placeholder => @dato, :required => "required", :id => "dato-sesion", :type => @datoType %>
			<% else %>
				<%= submit_tag "Enviar Correo", :id => "botonC-sesion" %>
			<% end %>
			
			<%if @repetir %>
				<%= text_field_tag "textClave", "", :size => 5, :maxlenght => 5, :placeholder => "Repetir Clave", :required => "required", :id => "clave-sesion", :type => "password" %>
			<%end%>
			<%= submit_tag @boton, :id => "boton-sesion" %>
		<% end %>
		<% if @cancel %>
			<div id="contenido-cancelar">
				<%= link_to "Cancelar", :controller => "welcome", :action => "index", :id => "cancelar-sesion"%>
			</div>
			
		<%end%>
	</div>
</section>
